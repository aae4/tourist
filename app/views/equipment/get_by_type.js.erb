$('#equipment-form').html("<%= escape_javascript(render 'equipment') %>")
$('#equipment-choose-form').html("<%= escape_javascript(render 'equipment_choose') %>")

 $(function() {
  $( "#equip-list, .sort2" ).sortable({
    connectWith: ".connectedSortable"
  }).disableSelection();
});


jQuery('.choose-equip a').live('click', function(e) {
  $('#choosed-eq ul').append("<li class='loaded'>" + $(this).parent().html() + "</li>")
  e.preventDefault();
});