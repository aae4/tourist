<%= simple_form_for @walk do |f| %>
  <div class="white-form">
  	
  	<%= f.hidden_field :user_id, :value => current_user.id %>

    <div  class="">
      <%= f.input :name, label: false, :placeholder => t(".name"), input_html: { class: 'span10' } %>
    </div>

    <div class="">
      <% walk_types = WalkType.all.map{|wt| [I18n.t("#{wt.name}"), wt.id]} %>
      <%= f.input :walk_type_id, :collection => walk_types, :default => 1, label: false, input_html: { class: 'span10' } %>
    </div>

    <div class="">
      <%= f.input :category, :collection => [1,2,3,4,5,6], :default => 1, label: false, input_html: { class: 'span10' } %>
    </div>

    <div class="form-inline">
      <%= f.submit t("actions.save"), :class => "btn btn-success pull-right"%>
      <%= link_to t(".walks_list"), walks_path, :class => "btn" %>
    </div>
  </div>
<% end %>
