<div class="listControl">
          <a id="expandList">Expand All</a>
          <a id="collapseList">Collapse All</a>
        </div>
        <div id="listContainer">
          <div class="product_columns">
            <div class="product_column_big">Наименование</div>
            <div class="product_column_small">ККал.</div>
            <div class="product_column_small">Белки</div>
            <div class="product_column_small">Жиры</div>
            <div class="product_column_small">Углеводы</div>
            <div class="product_column_big">Действия</div>
          </div>
          <hr>
          <ul id="expList">
            <% for product_type in @product_types %>
              <li><%= product_type.name %>
                <ul>
                  <% for product in product_type.products %>
                    <li>
                      <small>
                      <div class="product_columns">
                        <div class="product_column_big">
                          <%= product.name %>
                        </div>
                        <div class="product_column_small">
                          <%= product.kcals %>
                        </div>
                        <div class="product_column_small">
                          <%= product.proteins %>
                        </div>
                        <div class="product_column_small">
                          <%= product.fats %>
                        </div>
                        <div class="product_column_small">
                          <%= product.carbohydrates %>
                        </div>
                        <div class="product_column_big">
                          добавить
                        </div>
                      </div>
                    </li>
                  </small>
                    <hr>
                  <% end %>
                </ul>
              </li>
             <% end %>
          </ul>
        </div>