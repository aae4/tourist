<%= simple_form_for @equipment_type do |f| %>
  <div class="white-form">
    <div  class="">
      <%= f.input :name, label: false, :placeholder => "name", input_html: { class: 'span10' } %>
    </div>

    <div class="form-inline">
      <%= f.submit "Create", :class => "btn btn-success pull-right"%>
      <%= link_to "Equipment types list", equipment_types_path, :class => "btn" %>
    </div>
  </div>
<% end %>
