<div class="comment_msg row" id="comment-#{comment.id}">
	<hr>
	<div class="mini-avatar pull-left">
		<%= image_tag(comment.user.avatar.url) %>
	</div>
	<div class="comment_content pull-left">
		<div class="comment_header">
			<% if current_user == comment.user %>
	  		<%= link_to "×", comment_path(comment), :method => :delete, :remote => true, data: { confirm: 'Are you sure you want to remove this comment?', disable_with: "×" }, :class => 'close pull-right' %>
	  	<% end %>
	  	<h4><b><%= comment.user.email %></b></h4>
	  	<small><%= comment.updated_at %></small>
	  </div>
	  <p class="keep_spaces"><%= comment.comment %></p>
	</div>
</div>
<div class="likes" style="margin-top:10px;margin-left:47px">
	<small>
		<span class="vote">
		<%= link_to "Upvote", like_comment_path(comment), method: :put, :remote => true %> : <span id="comment<%=comment.id%>-upvote"><%= comment.positives.size%></span>|
		</span>
		<span class="vote">
		<%= link_to "Downvote", dislike_comment_path(comment), method: :put, :remote => true%> : <span id="comment<%=comment.id%>-downvote"><%= comment.negatives.size%></span>
		</span>
	</small>
</div>